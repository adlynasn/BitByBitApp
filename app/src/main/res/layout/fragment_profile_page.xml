<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".profilePage">


    <TextView
        android:id="@+id/profileTitle"
        android:layout_width="247dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="60dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="left"
        android:text="My Profile"
        android:textSize="20sp"
        />


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImage"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:src="@color/pastel_red"
        app:civ_border_color="#FF000000"
        app:civ_border_width="1dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/profileTitle"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-25dp"
        />

    <Button
        android:id="@+id/editProfilePageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="240dp"
        android:layout_marginTop="-25dp"
        android:layout_below="@id/profileTitle"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:text="Edit Profile"
        android:textColor="@color/pastel_red"
        android:textSize="14sp"
        />

    <Button
        android:id="@+id/optionsButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="320dp"
        android:layout_marginTop="50dp"
        android:drawableLeft="@drawable/ic_black_options"
        android:textAlignment="center"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="14sp"
        />

    <Button
        android:id="@+id/adminPostPageButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="259dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_post_add_24"
        android:fontFamily="@font/poppins_semibold"
        android:textAlignment="center"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/name"
        android:layout_width="247dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/profileImage"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="left"
        android:text="@string/app_name"
        android:textSize="20sp"
        />
    <!--        at line 86, change @string/app_name to user_name -->

    <TextView
        android:id="@+id/userBio"
        android:layout_width="247dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/name"
        android:layout_marginStart="30dp"
        android:layout_marginTop="-50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="35dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/poppins"
        android:gravity="left"
        android:text="@string/app_name"
        android:textSize="18sp"
        />
    <!--        at line 104, change @string/app_name to user_bio -->

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/userBio"
        android:gravity="left"
        android:layout_marginLeft="30dp"
        android:backgroundTint="@color/pastel_red"
        android:fontFamily="@font/poppins_semibold"
        android:text="ACHIEVEMENTS"
        android:layout_marginTop="-20dp"
        android:textSize="14sp"
        />

</RelativeLayout>