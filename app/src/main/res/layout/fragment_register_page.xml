<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/register_page_bg"
    android:id="@+id/registerFragment"
    tools:context=".registerPage">

    <TextView
        android:id="@+id/registerTitle"
        android:layout_width="247dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="35dp"
        android:layout_marginTop="191dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="left"
        android:text="Register"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/usernameTitle"
        android:layout_below="@id/registerTitle"
        android:layout_width="247dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="255dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="left"
        android:text="Username"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/registerTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="280dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/field"
        android:drawablePadding="20dp"
        android:hint="Username"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="@color/pastel_red"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/passwordTitle"
        android:layout_below="@id/username"
        android:layout_width="247dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="350dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="left"
        android:text="Password"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="375dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/field"
        android:drawablePadding="20dp"
        android:hint="Password"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="@color/pastel_red"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/emailTitle"
        android:layout_below="@id/password"
        android:layout_width="247dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="445dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="left"
        android:text="Email"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="470dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/field"
        android:drawablePadding="20dp"
        android:hint="Email (example: user1456@gmail.com)"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="@color/pastel_red"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/emailConfirmationTitle"
        android:layout_below="@id/email"
        android:layout_width="247dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="40dp"
        android:layout_marginTop="540dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="left"
        android:text="Confirmation of Email"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/emailconfirmation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailConfirmationTitle"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="565dp"
        android:layout_marginRight="35dp"
        android:background="@drawable/field"
        android:drawablePadding="20dp"
        android:hint="Confirm your email"
        android:minHeight="48dp"
        android:padding="10dp"
        android:textColorHint="@color/pastel_red"
        android:textSize="16sp" />

    <Button
        android:id="@+id/registerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailconfirmation"
        android:gravity="left"
        android:layout_marginTop="20dp"
        android:layout_marginStart="40dp"
        android:backgroundTint="@color/pastel_red"
        android:fontFamily="@font/poppins_semibold"
        android:text="REGISTER ACCOUNT"
        android:textColor="@color/white"
        android:textSize="14sp"
        />

    <Button
        android:id="@+id/returnToLoginPageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/emailconfirmation"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="290dp"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:text="CANCEL"
        android:textColor="@color/pastel_red"
        android:textSize="14sp" />



</RelativeLayout>