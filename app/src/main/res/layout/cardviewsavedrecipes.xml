<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="5dp"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="vertical">

            <Button
                android:id="@+id/ButtonDeleteRecipe"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginEnd="5dp"
                android:background="@drawable/transparent_background"
                android:drawableLeft="@drawable/ic_baseline_delete_outline_24"
                android:backgroundTint="#FFFFFF"
                >

            </Button>

            <RelativeLayout
                android:id="@+id/relativeLayoutSavedRecipesPage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:padding="10dp">

                <ImageButton
                    android:id="@+id/imageSavedRecipes"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@drawable/roundcorner"
                    android:clickable="true"
                    android:onClick="clickNew"
                    android:scaleType="fitXY"
                    android:src="@drawable/french_toast">

                </ImageButton>

            </RelativeLayout>

            <TextView
                android:id="@+id/nameFoodAllRecipe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:fontFamily="@font/poppins_semibold"
                android:linksClickable="true"
                android:padding="10dp"
                android:text="Low Calorie French Toast"
                android:textColor="@color/black"
                android:textSize="16sp"
                >

            </TextView>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</RelativeLayout>