<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="40dp"
    android:layout_marginStart="30dp"
    android:layout_marginEnd="30dp"
    android:layout_marginBottom="40dp"
    android:id="@+id/fragmentChgPass"
    tools:context=".forgotPasswordPage">

    <Button
        android:id="@+id/backToProfilePageButton"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_black_arrow_back_24"
        android:fontFamily="@font/poppins_semibold"
        android:textColor="@color/pastel_red"
        android:textSize="14sp"
        tools:ignore="SpeakableTextPresentCheck" />

    <TextView
        android:id="@+id/resetPasswordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/backToProfilePageButton"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="left"
        android:textColor="@color/pastel_red"
        android:text="Reset Password"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/resetPasswordDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/resetPasswordTitle"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:gravity="left"
        android:textColor="@color/black"
        android:text="Enter a new password below to change your password."
        android:textSize="18sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/emailTitle"
        android:layout_below="@id/resetPasswordDesc"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="left"
        android:text="Enter your email"
        android:textSize="16sp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/emailTitle"
        android:background="@drawable/white_field"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="@color/pastel_red"
        android:drawablePadding="20dp"
        android:minHeight="48dp"
        android:padding="10dp"
        android:fontFamily="@font/poppins"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/passwordTitle"
        android:layout_below="@id/email"
        android:layout_width="247dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="left"
        android:text="New Password"
        android:textSize="16sp" />



    <TextView
        android:id="@+id/newPasswordTitle"
        android:layout_below="@id/newPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="left"
        android:text="Re-enter new password"
        android:textSize="16sp" />


    <Button
        android:id="@+id/resetPasswordButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reEnteredPassword"
        android:gravity="left"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/pastel_red"
        android:fontFamily="@font/poppins_semibold"
        android:text="RESET PASSWORD"
        android:textColor="@color/white"
        android:textSize="14sp"
        />

    <Button
        android:id="@+id/returnToLoginPageButtonPageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/reEnteredPassword"
        android:layout_marginTop="40dp"
        android:layout_alignParentEnd="true"
        android:backgroundTint="@color/white"
        android:fontFamily="@font/poppins_semibold"
        android:text="CANCEL"
        android:textColor="@color/pastel_red"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/newPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/passwordTitle"
        android:background="@drawable/white_field"
        android:ems="10"
        android:inputType="textPassword"
        android:hint="Password"
        android:textColorHint="@color/pastel_red"
        android:drawablePadding="20dp"
        android:minHeight="48dp"
        android:padding="10dp"
        android:fontFamily="@font/poppins"
        android:textSize="16sp" />

    <EditText
        android:ems="10"
        android:inputType="textPassword"
        android:id="@+id/reEnteredPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/newPasswordTitle"
        android:layout_alignParentStart="true"
        android:hint="Password"
        android:background="@drawable/white_field"
        android:textColorHint="@color/pastel_red"
        android:padding="10dp"
        android:minHeight="48dp"
        android:textSize="16sp"/>


</RelativeLayout>