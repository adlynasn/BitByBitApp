<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="5dp">


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:layout_margin="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:backgroundTint="@color/white"
            android:text="DELETE"
            android:drawableLeft="@drawable/baseline_delete_pastelred_outline_24"
            android:textColor="@color/pastel_red"
            android:id="@+id/deleteRecipeButton"
            android:layout_marginEnd="5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/linearLayoutDelete1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/pastel_red"
            >


            <ImageView
                android:id="@+id/recipeImage"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="-40dp"
                android:background="@drawable/roundcorner"
                android:clickable="true"
                android:contentDescription="@string/hello_blank_fragment"
                android:onClick="clickNew"
                android:scaleType="fitXY"
                android:src="@drawable/green_tea_salmon" />

            <TextView
                android:id="@+id/recipeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="50dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Green Tea Noodles with Sticky Sweet Chili Salmon "
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>