<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".missionsPage">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:id="@+id/coordinatorLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:foregroundGravity="bottom"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        tools:context=".MainActivity">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/floatingActionButton2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/hello_blank_fragment"
            android:src="@drawable/ic_baseline_white_plus_sign_24"

            app:layout_anchor="@id/bottomAppBar" />

        <com.google.android.material.bottomappbar.BottomAppBar
            android:id="@+id/bottomAppBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:fabCradleMargin="10dp"
            app:fabCradleRoundedCornerRadius="10dp"
            app:fabCradleVerticalOffset="10dp">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/bottomNavigationView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@drawable/transparent_background"
                app:menu="@menu/bottom_nav_menu"

                />
        </com.google.android.material.bottomappbar.BottomAppBar>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <TextView
        android:id="@+id/missionsTitle"
        android:layout_width="247dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="70dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="left"
        android:text="Missions"
        android:textSize="20sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/missionsCentreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/missionsTitle"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/field"
        android:backgroundTint="@color/pastel_red"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="Daily Missions"
        android:textColor="@color/white"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/artOfExerciseMissionTitle"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/missionsCentreTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/greyfield"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_mission"
        android:text="Art of Exercise"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/artOfExerciseMission"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/artOfExerciseMissionTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:gravity="left"
        android:text="Do some Yoga for 10 minutes."
        android:textColor="@color/black"
        android:textSize="14sp" />

    <Button
        android:id="@+id/exerciseMissionCompleteButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/artOfExerciseMission"
        android:layout_marginStart="300dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_check_circle_outline_24"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/artOfCookingMissionTitle"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/exerciseMissionCompleteButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/greyfield"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_mission"
        android:text="Art of Cooking"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/artOfCookingMission"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/artOfCookingMissionTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:gravity="left"
        android:text="Try out cooking a new recipe!"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <Button
        android:id="@+id/cookingMissionCompleteButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/artOfCookingMission"
        android:layout_marginStart="300dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_check_circle_outline_24"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/artOfSelfLoveMissionTitle"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/cookingMissionCompleteButton"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/greyfield"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:drawableLeft="@drawable/ic_mission"
        android:text="Art of Self Love"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/artOfSelfLoveMission"
        android:layout_width="334dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/artOfSelfLoveMissionTitle"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/poppins"
        android:gravity="left"
        android:text="Do something you love for 10 minutes. It could be listening to music or even strolling at the park!"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <Button
        android:id="@+id/selfLoveMissionCompleteButton"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/artOfSelfLoveMission"
        android:layout_marginStart="300dp"
        android:backgroundTint="@color/white"
        android:drawableLeft="@drawable/ic_baseline_check_circle_outline_24"
        android:textSize="14sp" />


</RelativeLayout>